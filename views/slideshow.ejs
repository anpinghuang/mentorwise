<style>
    /* BIG CONTAINER */
    .container2 {
      position: relative;
      width: 30vh;
      height: 100%;
      margin-right: 5vw;
      margin-top: 5vh;
      float: right;
    }
  
    .container2 img {
      width: 50%; /* Use 100% width to fill the container */
      display: block;
      margin-left: auto;
      margin-right: auto;
    }
  
    /* SLIDESHOW */
    .user {
        display: none;
        height: 100%;
        /*border: 2px solid rgb(255, 113, 234);*/
        background-color: #4a4e51;
        display: flex;
        justify-content: center;
        align-items: center;
        border-radius: 10px;
        margin: 10px;
    }
    .user img {
        max-width: 100%;
        max-height: 100%;
    }
  
    .prev,
    .next {
      cursor: pointer;
      position: absolute;
      left: 50%;
      width: auto; /* height */
      height: 5vw; /* width */
      margin-left: -15px;
      padding: 10px;
      color: white;
      font-weight: bold;
      font-size: 18px;
      transition: 0.6s ease;
      user-select: none;
      padding-top: 110px;
      background-color: rgba(0, 0, 0, 0.8);
    }
  
    .prev {
      top: -110px;
      transform: rotate(90deg);
    }
  
    .next {
      bottom: -100px;
      transform: rotate(90deg);
    }
  
    @media screen and (max-width: 600px) {}
  </style>
  
  <div class="container2">
    <div class="user"><img src="images/user1.jpg"></div>
    <div class="user"><img src="images/user2.jpg"></div>
    <div class="user"><img src="images/user3.jpg"></div>
    <div class="user"><img src="images/user4.jpg"></div>
    <div class="user"><img src="images/user5.jpg"></div>
    <div class="user"><img src="images/user6.jpg"></div>
    <div class="user"><img src="images/user7.jpg"></div>
    <div class="user"><img src="images/user8.jpg"></div>
    <div class="user"><img src="images/user9.jpg"></div>
    <div class="user"><img src="images/user10.jpg"></div>
  
    <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
    <a class="next" onclick="plusSlides(1)">&#10095;</a>
  </div>
  
  <script>
    let slideIndex = 1;
    showSlides(slideIndex);
  
    // Next/previous controls
    function plusSlides(n) {
      if (canShift(n)) {
        showSlides((slideIndex += n));
      }
    }
  
    // Thumbnail image controls
    function currentSlide(n) {
      showSlides((slideIndex = n));
    }
  
    function showSlides(n) {
      let i;
      let userDivs = document.getElementsByClassName("user");
      if (n > userDivs.length) {
        slideIndex = 1;
      }
      if (n < 1) {
        slideIndex = userDivs.length;
      }
  
      for (i = 0; i < userDivs.length; i++) {
        userDivs[i].style.display = "none";
      }
  
      // Display 5 images at a time
      for (let j = slideIndex - 1; j < slideIndex + 4; j++) {
        if (j < userDivs.length) {
          userDivs[j].style.display = "block";
        }
      }
    }
  
    function canShift(n) {
      // Check if there are enough images to display a set of 5
      return slideIndex + n <= document.getElementsByClassName("user").length - 4 && slideIndex + n >= 1;
    }
  </script>
  